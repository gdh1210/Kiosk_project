<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF"/> <!-- 내부 색상 (배경색) -->
    <stroke
        android:width="2dp"
        android:color="#202020"/> <!-- 테두리 색상과 두께 -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
    <corners android:radius="4dp"/> <!-- 모서리 둥글기 -->
</shape>